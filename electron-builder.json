{
    "appId": "com.codversetech.kilimogen",
    "productName": "Kilimogen",	
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database.sqlite",
        "to": "database.sqlite"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
  