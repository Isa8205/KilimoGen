{
  "name": "kilimogen",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "description": "A cross-platform desktop app for a factory system",
  "author": "Codverse Technology",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite build && electron dist-electron/main.js",
    "build": "vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google-cloud/spanner": "^7.17.1",
    "@shadcn/ui": "^0.0.4",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "custom-electron-titlebar": "^4.2.8",
    "framer-motion": "^11.11.15",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.473.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0",
    "react-toastify": "^11.0.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.14",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "typeorm": "^0.3.5",
    "vite-tsconfig-paths": "^5.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.codversetech.shopsystem",
    "productName": "ShopSystem",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "!node_modules/.cache/**"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icons"
    }
  }
}
